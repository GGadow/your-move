<html>
<head>
  <meta charset="utf8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Your Move</title>
  <%= stylesheet_link_tag 'general', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'player', media: 'all', 'data-turbolinks-track' => true %>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js?ver=1.4.2"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="page">
    <header>
      (Banner image)
    </header>
    <nav>
      <ul class="align-left">
        <li><a href="<%= dashboard_path %>">Home</a></li>
        <li><a href="<%= new_invitation_path %>">New Game</a></li>
      </ul>
      <ul class="align-right">
        <li><a href="<%= logout_path %>">Logout</a></li>
      </ul>
    </nav>
    <section id="content">
      <% flash.each do |name, msg| %>
        <div class="alert-<%= name == "notice" ? "success" : "failure" %>">
          <%= msg %>
        </div>
      <% end %>
 <%= yield %>
    </section>
    <footer>
      Final class project, Advanced Topics
    </footer>
  </section>
</body>
</html>

