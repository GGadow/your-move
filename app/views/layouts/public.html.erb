<html>
<head>
  <meta charset="utf8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Your Move</title>
  <%= stylesheet_link_tag 'general', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'public', media: 'all', 'data-turbolinks-track' => true %>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js?ver=1.4.2"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>
  <section id="page">
    <header>
      (Banner image)
    </header>
    <nav>
      <ul class="align-left">
        <li><a href="/">Home</a></li>
      </ul>
      <ul class="align-right">
        <li><a href="<%= new_player_path %>">Register</a></li>
        <li id="access">
          <a id="access-trigger" href="#">Login</a>
          <div id="access-content">
            <%= form_tag(url_for(controller: "sessions", action: "create"), method: "post") do %>
              <fieldset id="access-inputs">
                <%= text_field_tag :login_handle, nil, placeholder: "Name", :required=>true %> 
                <%= password_field_tag :login_password, nil, placeholder: "Password", :required=>true %>
              </fieldset>
              <fieldset id="access-actions">
                <%= submit_tag "Log in" %>
              </fieldset>
            <% end %>
          </div>
        </li>
      </ul>
    </nav>
    <section id="content">
      <% flash.each do |name, msg| %>
        <div class="alert-<%= name == "notice" ? "success" : "failure" %>">
          <%= msg %>
        </div>
      <% end %>
 <%= yield %>
    </section>
    <footer>
      Final class project, Advanced Topics
    </footer>
  </section>
</body>
</html>

